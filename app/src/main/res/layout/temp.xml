<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/btnUserSetMonitored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="Set Monitored Apps"
        android:textSize="12sp" />

    <Button
        android:id="@+id/btnUserSetControlled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Set Controlled Apps"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/btnUserSetMonitored"
        app:layout_constraintStart_toStartOf="@+id/btnUserSetMonitored"
        app:layout_constraintTop_toBottomOf="@+id/btnUserSetMonitored" />



</androidx.constraintlayout.widget.ConstraintLayout>